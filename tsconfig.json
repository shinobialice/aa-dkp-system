{
  "compilerOptions": {
    "target": "es2024",
    "lib": ["DOM", "ESNext"],
    "downlevelIteration": true,
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "noEmit": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "typeRoots": ["src/types", "./node_modules/@types"],
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "____tailwind.config.js",
    "src/actions/hasUserTag.disabled.ts",
    "src/actions/hasUserTag.ts"
  ],
  "exclude": ["node_modules", "components/**/*.tsx"]
}
